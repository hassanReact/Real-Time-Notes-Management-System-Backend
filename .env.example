# Database Configuration
# PostgreSQL connection string for Prisma
DATABASE_URL="postgresql://username:password@localhost:5432/notes_management?schema=public"

# JWT Configuration
# Secret key for signing JWT tokens - use a strong, random string in production
JWT_SECRET="your-super-secret-jwt-key-change-this-in-production"
# Access token expiration time
JWT_EXPIRES_IN="15m"
# Refresh token expiration time
JWT_REFRESH_EXPIRES_IN="7d"

# Redis Configuration
# Redis connection for caching and session management
REDIS_HOST="localhost"
REDIS_PORT=6379
REDIS_PASSWORD=""

# Email Configuration (for password reset, welcome emails, notifications)
# SMTP settings for sending emails
SMTP_HOST="smtp.gmail.com"
SMTP_PORT=587
SMTP_USER="your-email@gmail.com"
SMTP_PASS="your-app-password"
SMTP_FROM="noreply@notesapp.com"
SUPPORT_EMAIL="support@notesapp.com"
APP_NAME="Notes Management"

# Application Configuration
# Port for the NestJS application
PORT=7200
# Environment mode
NODE_ENV="development"

# File Upload Configuration
# Maximum file size for uploads (in bytes)
MAX_FILE_SIZE=5242880
# Allowed file types for profile pictures
ALLOWED_FILE_TYPES="image/jpeg,image/png,image/gif"

# Rate Limiting Configuration
# Maximum requests per time window
RATE_LIMIT_MAX=100
# Time window in seconds
RATE_LIMIT_WINDOW=60

# CORS Configuration
# Allowed origins for CORS
CORS_ORIGIN="http://localhost:3000,http://localhost:4200"

# Frontend URL (for emails and CORS)
FRONTEND_URL="http://localhost:3000"